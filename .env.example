PORT=5000
MONGO_URI=mongodb://localhost:27017/sigp
MONGO_URI_INTERMEDIARIO=mongodb://localhost:27017/test

# SMTP configuration (backend only, never exposed to frontend)
SMTP_HOST=smtp.seu-servidor.com
SMTP_PORT=587
SMTP_USER=usuario@smtp.com
SMTP_PASS=sua_senha_segura
SMTP_SECURE=false
EMAIL_FROM="SIGP <no-reply@sigp.local>"

# Contatos visíveis no frontend (opcional):
# Preencha para exibir no rodapé da aplicação
VITE_CONTACT_NAME="orlando.rocha@pepsico.com"
VITE_CONTACT_EMAIL="orlando.rocha@pepsico.com"

# Auth for protected endpoints
JWT_SECRET=troque-por-uma-chave-secreta-forte
ADMIN_USER=admin
ADMIN_PASS=senha-admin-segura

# Recipients encryption key: 32 bytes base64 (e.g. openssl rand -base64 32)
RECIPIENTS_SECRET=troque-por-uma-chave-base64-de-32-bytes

# Optional app url for CORS
APP_URL=http://localhost:5173

