name: "Deploy para VPS"

on:
  push:
    branches:
      - main

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Baixar código
        uses: actions/checkout@v4

      - name: Copiar arquivos para o VPS
        uses: appleboy/scp-action@v0.1.7
        with:
          host: "85.209.92.96"
          username: "root"
          key: ${{ secrets.VPS_SSH_KEY }}
          source: "."
          target: "/var/www/planoita"

      - name: Instalar dependências e reiniciar app
        uses: appleboy/ssh-action@v0.1.7
        with:
          host: "85.209.92.96"
          username: "root"
          key: ${{ secrets.VPS_SSH_KEY }}
          script: |
            cd /var/www/planoita
            npm install
            npm run build
            chown -R www-data:www-data .